%% Title, MakeTitle
\def\title#1{\gdef\@title{#1}}
\def\engtitle#1{\gdef\@engtitle{#1}}
\def\author#1{\gdef\@author{#1}}
\def\engauthor#1{\gdef\@engauthor{#1}}
\def\keyword#1{\gdef\@keyword{#1}}
\long\def\abstract#1{\long\gdef\@abstract{#1}}%

\def\@maketitle{%
  \newpage\null
  \centering
    {\sffamily\gtfamily\Large \@title \par}% Title 14pt
    \vskip .7em
    {\large \@engtitle \par}% English Title 12pt
    \vskip 1em
    {\normalsize
    \begin{tabular}[t]{l}%
      \@author% Authors 10pt
    \end{tabular}\par}
    \vskip .7em
    {\small \lineskip 0mm
    \begin{tabular}[t]{l}%
      \@engauthor% English Authors 9pt
    \end{tabular}\par}
  \@ifundefined{@abstract}{}{% Abstract 9pt
     \small%
     \vskip 1em
     \begin{minipage}{160truemm}%
      \hspace{2zw}\@abstract
     \end{minipage}%
  }%
  \@ifundefined{@keyword}{}{% Keyword 9pt
     \small%
     \vskip 1em
     \begin{minipage}{160mm}%
      {\bf \textit{Key Words}: }\@keyword
     \end{minipage}%
  }%
  \vskip 2em
}%

